---
import {
  HeartIcon,
  LinkIcon,
  LocationIcon,
  StarIcon,
  TwitterIcon,
  UsersIcon,
} from '../assets/icons'

interface Props {
  userData: {
    login: string;
    name: string | null;
    followers: number;
    following: number;
    bio: string | null;
    publicGists: number;
    twitterUsername: string | null;
    avatarUrl: string;
    location: string | null;
    blog: string | null;
  };
}

const { userData } = Astro.props;
---

<aside class="text-text-primary">
  <img
    class="w-64 h-64 rounded-full border border-slate-300"
    src={userData.avatarUrl}
  />
  <h1 class="text-2xl pt-2 font-semibold tracking-wide">
    {userData.name ? userData.name : userData.login}
  </h1>
  <h2
    class="pb-3 text-slate-500 text-xl font-light leading-normal tracking-wide"
  >
    {userData.login}
  </h2>
  <div class="inline-flex gap-2 py-2">
    <button
      class="px-9 py-1 bg-btn-primary outline-1 outline-btn-border text-center rounded-lg text-sm font-medium leading-normal tracking-wide"
      >
      Follow</button
    >
    <button
      class="px-6 py-1 inline-flex gap-1.5 text-center rounded-lg bg-btn-primary outline-1 outline-btn-border text-sm font-medium leading-normal tracking-wide"
      ><HeartIcon/>Sponsor</button
    >
  </div>
  {userData.bio && <p
    class="py-4 text-slate-400 text-base font-normal leading-normal tracking-wide"
  >
    {userData.bio}
  </p>}
  <ul class="">
    <li class="pb-3">
      <span class="inline-flex gap-1.5">
        <UsersIcon />
        <b>{userData.followers}</b> Followers · <b>{userData.following}</b> Following ·</span
      >
    </li>
    <li class="pb-3">
      <span class="inline-flex gap-1.5">

        <StarIcon />
        <p>{userData.publicGists}</p>
      </span>
    </li>
    <li class="pb-3">
      <span class="inline-flex gap-1.5">
        <LocationIcon />
        {userData.location}
      </span>
    </li>
    <li class="pb-3">
      <span class="inline-flex gap-1.5">
        <LinkIcon />
        <a href="#">{userData.blog}</a>
      </span>
    </li>
    <li class="pb-3 inline-flex">
      <span class="inline-flex gap-1.5">
        <TwitterIcon />
        {userData.twitterUsername}
      </span>
    </li>
  </ul>
</aside>
