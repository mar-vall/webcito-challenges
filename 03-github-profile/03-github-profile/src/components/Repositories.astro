---
import { StarIcon, ForkIcon } from "../assets/icons";
---

<main class="col-span-4 pl-10 text-text-primary">
  <h4 class="text-xl font-semibold leading-normal tracking-wide">
    Repositories (189)
  </h4>
  <section class="py-4">
    <input type="text" class="border rounded-lg" />
  </section>
  <hr class="mt-2 mb-5" />
  <article class="flex justify-between">
    <div class="">
      <div class="inline-flex gap-2 pb-3">
        <h3
          class="text-blue-400 text-xl font-semibold leading-normal tracking-wide"
        >
          taller-pokedex
        </h3>
        <div
          class="my-1.5 px-2 py-0.5 rounded-lg outline outline-offset-[-1px] outline-zinc-400 inline-flex justify-center items-center gap-2.5"
        >
          <p
            class="justify-center text-zinc-400 text-xs font-normal leading-none tracking-wide"
          >
            Public
          </p>
        </div>
      </div>
      <p class="pb-2">
        La mejor Pokedex en la web https://leonidasesteban.com/proyectos/pokedex
      </p>
      <div class="inline-flex justify-start items-start pb-2">
        <div
          class="bg-badget px-3 py-1 rounded-[38px] flex justify-center items-center gap-2.5"
        >
          <div
            class="justify-center text-blue-500 text-xs font-medium leading-none tracking-wide"
          >
            javascript
          </div>
        </div>
      </div>
      <div class="flex text-sm text-gray-500">
        <p class="inline-flex gap-1 px-1">Javascript</p>
        <p class="inline-flex gap-1 px-1">
          <StarIcon/>1
        </p>
        <p class="inline-flex gap-1 px-1"><ForkIcon/>10</p>
        <p class="inline-flex gap-1 px-1">Updated 2 days ago</p>
      </div>
    </div>
    <div>
      <div
        class="pl-2 pr-4 py-2 bg-btn-primary rounded-lg inline-flex justify-center items-center gap-2"
      >
        <div data-property-1="star" class="w-6 h-6 relative overflow-hidden">
        </div>
        <div
          class="justify-center text-sm font-semibold leading-normal tracking-wide"
        >
          Start
        </div>
      </div>
    </div>
  </article>
  <hr class="text-gray-400 my-3" />
</main>
