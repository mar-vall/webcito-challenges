---
export const prerender = true
import Layout from '../layouts/Layout.astro'
import ProfileSearch from '../components/ProfileSearch'
---

<Layout>
  <main
    class="m-auto flex flex-col w-screen justify-center items-center min-h-screen bg-primary"
  >
    <div class="code-bg"></div>
    <div class="circle-container">
      <svg
        class="octocat"
        viewBox="0 0 250 250"
        xmlns="http://www.w3.org/2000/svg"
        preserveAspectRatio="xMidYMid meet"
        aria-hidden="true"
      >
        <g transform="rotate(-45 125 125)">
          <path
            d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3
         C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2"
            fill="#f0f6fc"
            class="octo-arm"></path>
          <path
            d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6
         C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0
         C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2
         C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6
         C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6
         C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1
         C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z"
            fill="#f0f6fc"
            class="octo-body"></path>
        </g>
      </svg>
    </div>
    <h1 class="hero-title text-center z-3">Welcome! Search a profile</h1>
    <ProfileSearch client:load />
  </main>
</Layout>

<style>
  .code-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.05;
    z-index: 0;
    background-image:
      linear-gradient(#58a6ff 1px, transparent 1px),
      linear-gradient(90deg, #58a6ff 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #f0f6fc;
    background: linear-gradient(90deg, #328ffa, #9b58f8);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  .circle-container {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: radial-gradient(circle at center, #1a2230 0%, #0d1117 100%);
    box-shadow:
      0 0 0 10px rgba(110, 84, 148, 0.2),
      0 0 30px rgba(110, 84, 148, 0.4),
      inset 0 0 20px rgba(88, 166, 255, 0.1);
    display: flex;
    justify-content: center;
    align-items: end;
    position: absolute;
    top: 100px;
    animation: pulse 6s ease-in-out infinite;
  }
  .octocat {
    width: 70%;
    height: 40%;
    animation: float 6s ease-in-out infinite;
    scale: 3;
  }

  .octo-arm {
    transform-origin: 130px 106px;
  }

  .octocat:hover .octo-arm {
    animation: octocat-wave 560ms ease-in-out;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  @keyframes pulse {
    0%,
    100% {
      box-shadow:
        0 0 0 10px rgba(110, 84, 148, 0.2),
        0 0 30px rgba(110, 84, 148, 0.4),
        inset 0 0 20px rgba(88, 166, 255, 0.1);
    }
    50% {
      box-shadow:
        0 0 0 15px rgba(110, 84, 148, 0.3),
        0 0 50px rgba(110, 84, 148, 0.6),
        inset 0 0 30px rgba(88, 166, 255, 0.2);
    }
  }
  @keyframes octocat-wave {
    0%,
    100% {
      transform: rotate(0);
    }
    20%,
    60% {
      transform: rotate(-25deg);
    }
    40%,
    80% {
      transform: rotate(10deg);
    }
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(300deg);
    }
  }
</style>
